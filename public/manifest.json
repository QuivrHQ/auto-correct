{
  "manifest_version": 3,
  "name": "AutoCorrect by Quivr",
  "description": "Correction grammaticale et orthographique en temps r√©el",
  "version": "1.2.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "*://*.zendesk.com/*",
    "*://*.fly.dev/*",
    "*://*.quivr.com/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.zendesk.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
